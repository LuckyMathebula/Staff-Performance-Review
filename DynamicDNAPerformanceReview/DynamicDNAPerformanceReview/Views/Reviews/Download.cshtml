
@{
    ViewBag.Title = "Download";
}

@model List<string>


<head>
    <title>Download</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/MyCSS.css" rel="stylesheet" />

    <link href="~/Trying.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <link href="~/Css/General.css" rel="stylesheet" />
</head>
<body>
    <img src="~/Images/logo.png" />
    @*<div class="container">
            <div class="LoggedIn">Logged in as <b> @User.Identity.Name</b>


            </div>
        </div>*@
    <br />
    <br />
  

        <ul class="topnav">
            <li><a class="active" href="~/Account/Login">Home</a></li>
            <li><a href="~/Reviews/FillReview">Performance</a></li>
            <li><a href="~/Reviews/UserList">Reviews</a></li>
            <li class="right">
                @Html.ActionLink("Welcome " + @User.Identity.Name + "!", "LogOff", "Account", routeValues: null, htmlAttributes: new
       {
           title = "Signout"
       })
            </li>

        </ul>

        <div class="Wrapper">

            <br />
            <br /><br />
            <h4>Staff Performance Reviews</h4>
            <br />

            <div class="container-downloads">

                <table border="1" ; style="border-color:#f39c12; border-style:double; margin:5px;">
                    @using (Html.BeginForm("ProcessForm",
"Reviews", FormMethod.Post))
                    {
                        foreach (string file in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox"
                                           name="selectedfiles" value="@file" />
                                </td>
                                <td>@file</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="2">
                                <input type="submit" style="background-color:#2a398c!important" class="btn btn-success" value="Download Selected Reviews" />
                            </td>
                        </tr>
                    }
                </table>
                <div class="buttons">



                </div>

            </div>


        </div>



    </body>
